{
  "name": "cypress-ct-lit",
  "version": "0.1.0",
  "description": "Cypress Component Testing for Lit and Web Components",
  "keywords": [
    "cypress",
    "testing",
    "lit",
    "lit-element",
    "LitElement",
    "component",
    "cypress-ct",
    "cypress-ct-lit",
    "component test"
  ],
  "exports": {
    "node": "./definition.js",
    "default": "./index.js"
  },
  "scripts": {
    "build": "pnpm build:definition && pnpm build:mount",
    "build:mount": "tsc --project tsconfig.mount.json",
    "build:definition": "tsc --project tsconfig.definition.json",
    "prepack": "node scripts/copy.mjs",
    "prepublishOnly": "pnpm build"
  },
  "types": "*.d.ts",
  "files": [
    "package.json",
    "definition.js",
    "index.js",
    "definition.d.ts",
    "index.d.ts",
    "types.d.ts",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@cypress/mount-utils": "^4.0.0"
  },
  "devDependencies": {
    "cypress": "^12.8.1",
    "glob": "^10.0.0",
    "lit": "^2.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1"
  },
  "peerDependencies": {
    "cypress": ">=10.6.0",
    "lit": "^2.0.0"
  },
  "author": {
    "name": "Diego Jesus Hernandez Gonzalez",
    "aka": "redfox-mx",
    "email": "hernandezdj98@outlook.com"
  },
  "repository": "https://github.com/redfox-mx/cypress-lit"
}
